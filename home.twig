{% extends "layout.twig" %}
{% block content %}

<!-- CONTAINER -->
<div class="template-container">
	<div class="home-page">

		<!-- FULL SCREEN SLIDESHOW -->
		{{widget('responsiveslideshow', 'slideshow', {
			'duration':'4',
			'transSpeed': '2000',
			'transType': 'fade',
			'showButtons': false,
			'showBullets': true,
			'allowPause': false,
			'allowLoop': false,
			'images':[
			{
				'imageHeight':'auto',
				'imageWidth':'100%',
				'url':asset('images/slide-1.jpg'),
				'title':'First slide title',
				'description': 'First slide description'
			},
			{
				'imageHeight':'auto',
				'imageWidth':'100%',
				'url':asset('images/slide-2.jpeg'), 
				'title':'Second slide title',
				'description': 'Second slide description'
			},
			{
				'imageHeight':'auto',
				'imageWidth':'100%',
				'url':asset('images/slide-1.jpg'),
				'title':'Third slide title',
				'description': 'Third slide description'
			}
			]
		})|raw}}

		<!-- HEADER -->
		{% include "includes/header.twig" %}
		
	</div>

	<!-- MAIN SECTION -->
	<div role="main" id="main">

		<div class="container">

			<!-- MAIN ZONE -->
			{{zone('main')|raw}}

		</div>

	</div>

	<!-- FOOTER -->
	{% include "includes/footer.twig" %}

</div>
<!-- END CONTAINER -->

{% endblock %}

{% block scripts %}

	<!-- Fixed Scroll -->
	<script src="{{asset('js/background-check.js')}}"></script>

	<script>
		document.addEventListener('DOMContentLoaded', function () {
			// Specific images
			BackgroundCheck.init({
				targets: '.navigation-list',
				images: '.responsiveslideshow__figure'
			});
			BackgroundCheck.refresh();
		}); 




		(function Forever(){
		    BackgroundCheck.refresh();
		    setTimeout(Forever, 1000);
		})();
	</script>
	
{% endblock %}

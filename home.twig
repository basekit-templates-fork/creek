{% extends "layout.twig" %}
{% block content %}

<!-- CONTAINER -->
<div class="template-container">
	<div class="home-page">

		<!-- FULL SCREEN SLIDESHOW -->
		{{widget('responsiveslideshow', 'slideshow', {
			'duration':'4',
			'transSpeed': '2000',
			'transType': 'fade',
			'showButtons': false,
			'showBullets': true,
			'allowPause': false,
			'allowLoop': false,
			'images':[
			{
				'imageHeight':'auto',
				'imageWidth':'100%',
				'url':asset('images/slide-1.jpg'),
				'title':'First slide title',
				'description': 'First slide description'
			},
			{
				'imageHeight':'auto',
				'imageWidth':'100%',
				'url':asset('images/slide-1.jpg'), 
				'title':'Second slide title',
				'description': 'Second slide description'
			},
			{
				'imageHeight':'auto',
				'imageWidth':'100%',
				'url':asset('images/slide-1.jpg'),
				'title':'Third slide title',
				'description': 'Third slide description'
			}
			]
		})|raw}}

		<!-- HEADER -->
		{% include "includes/header.twig" %}
		
	</div>

	<!-- MAIN SECTION -->
	<div role="main" id="main">

		<div class="container">

			<!-- MAIN ZONE -->
			{{zone('main')|raw}}

		</div>

	</div>

	<!-- FOOTER -->
	{% include "includes/footer.twig" %}

</div>
<!-- END CONTAINER -->


<!-- MASONRY GALLERY -->
{% endblock %}

{% block scripts %}

	<!-- JQUERY -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

	<!-- imagesLoaded -->
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>

	<!-- Masonry -->
	<script src="//cdnjs.cloudflare.com/ajax/libs/masonry/3.2.1/masonry.pkgd.min.js"></script>

	<script>
		var container = document.querySelector('.product-list');
		imagesLoaded( container, function() {
			var msnry = new Masonry( container, {
				itemSelector: '.product-item'
			});
		});
	</script>
	
{% endblock %}
